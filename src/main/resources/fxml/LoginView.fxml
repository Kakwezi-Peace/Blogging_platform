<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.blogging.controller.LoginController" 
            styleClass="login-page">
    
<center>
        <VBox alignment="CENTER" spacing="10" maxWidth="400" styleClass="login-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="Smart Blogging Platform" styleClass="login-title"/>
                <Text text="Sign in to your account" styleClass="login-subtitle"/>
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
            
            <!-- Login Form -->
            <VBox spacing="15">
                <VBox spacing="5">
                    <Label text="Username" styleClass="form-label"/>
                    <TextField fx:id="usernameField" promptText="Enter your username" 
                              styleClass="modern-textfield"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                  styleClass="modern-textfield"/>
                </VBox>
                
                <Button fx:id="loginButton" text="Sign In" onAction="#handleLogin" 
                       styleClass="login-button" maxWidth="Infinity"/>
            </VBox>
            
            <!-- Signup Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" styleClass="link-label"/>
                <Hyperlink fx:id="signupLink" text="Sign Up" onAction="#handleSignupLink"
                          styleClass="signup-link"/>
            </HBox>
            
        </VBox>
    </center>
</BorderPane>
