<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.blogging.controller.SignupController" 
            styleClass="signup-page">
    
    <center>
        <VBox alignment="CENTER" spacing="10" maxWidth="450" styleClass="signup-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="Create Account" styleClass="signup-title"/>
                <Text text="Join the Smart Blogging Platform" styleClass="signup-subtitle"/>
            </VBox>
            
            <!-- Error/Success Labels -->
            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
            <Label fx:id="successLabel" styleClass="success-label" wrapText="true"/>
            
            <!-- Signup Form -->
            <VBox spacing="15">
                <VBox spacing="5">
                    <Label text="Username" styleClass="form-label"/>
                    <TextField fx:id="usernameField" promptText="Choose a username (3-50 characters)" 
                              styleClass="modern-textfield"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email address"
                              styleClass="modern-textfield"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Choose a password (min 6 characters)"
                                  styleClass="modern-textfield"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Confirm Password" styleClass="form-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password"
                                  styleClass="modern-textfield"/>
                </VBox>
                
                <Button fx:id="signupButton" text="Create Account" onAction="#handleSignup" 
                       styleClass="signup-button" maxWidth="Infinity"/>
            </VBox>
            
            <!-- Login Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?" styleClass="link-label"/>
                <Hyperlink fx:id="loginLink" text="Sign In" onAction="#handleLoginLink"
                          styleClass="login-link"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
